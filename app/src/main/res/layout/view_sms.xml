<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:id="@+id/rl_post"
    android:layout_margin="@dimen/space_size_e">
    <RelativeLayout
        android:id="@+id/rl_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/colorBannerText"
        >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffd61" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_feed"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="5dp"
        android:textColor="@color/colorText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_feed"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#c79a00" />
    </RelativeLayout>
</RelativeLayout>